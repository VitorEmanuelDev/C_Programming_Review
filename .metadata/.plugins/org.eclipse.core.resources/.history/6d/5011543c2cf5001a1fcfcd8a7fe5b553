#include <stdio.h>
#include <stdlib.h>
#define SIZE 100

int main(void) {

	char string[SIZE];
	char character;

	printf("Type a character:");
	scanf("%c", character);

		if(character >= 'A' && character <= 'Z'){

			character = character + 32;
			printf("%c", character);

		} else if (character >= 'a' && character <= 'z'){

			character = character - 32;
			printf("%c", character);

		}

}
