#include <stdio.h>
#include <stdlib.h>
#define SIZE 100

int main(void) {

	char string[SIZE];

	printf("Type some letters:");
	fgets(string, SIZE, stdin);

	for(int current = 0; string[current] != '\0'; current++){

		if(string[current] >= 'A' && string[current] <= 'Z'){

			char character = string[current];
			printf("%c", character);

		} else if (string[current] >= 'a' && string[current] <= 'z'){

			char character = string[current];
			printf("%c", character);

		}

	}

}
