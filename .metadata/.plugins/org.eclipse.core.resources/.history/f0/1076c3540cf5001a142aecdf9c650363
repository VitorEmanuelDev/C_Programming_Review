#include <stdio.h>
#include <stdlib.h>

int main(void){
    int base, altura, area, perimetro;

    printf("Informe o comprimento das bases.\n");
    scanf("%d", &base);

    printf("Informe a altura.\n");
    scanf("%d", &altura);

    area = base * altura;

    printf("A area é de %d. \n", area);

    perimetro = (base * 2) + (altura * 2);

    printf("O perímetro é de %d.", perimetro);

}