#include <stdio.h>
#include <stdlib.h>
#define SIZE 100

int main(void) {

	char string[SIZE];

	printf("Type some letters:");
	fgets(string, SIZE, stdin);

	for(int current = 0; string[current] != '\0', current++){

		if(string[current] >= 65 && string[current] <= 90){

			printf("%c", string[current + 32]);

		}

	}

}
